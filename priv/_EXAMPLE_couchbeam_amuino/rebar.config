%%-*- mode: erlang -*-

{erl_opts, [debug_info]}.

{plugins, [rebar3_hex]}.

{deps, [
    {jsx, "~>2.8.2"},
    {hackney, "~>1.9"}
]}.


{profiles, [{docs, [
                    {deps, [
                            {edown, "~> 0.8.0"}
                           ]},

                    {edoc_opts, [{doclet, edown_doclet},
                                 {packages, false},
                                 {subpackages, true},
                                 {top_level_readme,
                                  {"./README.md", "http://github.com/benoitc/couchbeam"}}]}
                   ]},
            {test, [
                    {cover_enabled, true},
                    {eunit_opts, [verbose]},

                    {deps, [
                            {oauth,
                             {git, "https://github.com/barrel-db/erlang-oauth.git",
                              {branch, "master"}}}
                           ]}]}


           ]}.
